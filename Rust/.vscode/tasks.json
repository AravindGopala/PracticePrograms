{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cargo_build",
            // "label": "bash",
            "type": "shell",
            "command": "cargo build -q --manifest-path=${workspaceFolder}/${command:extension.commandvariable.file.fileDirBasename1Up}/Cargo.toml",
            // "command": "cd ${workspaceFolder}/${command:extension.commandvariable.file.fileDirBasename1Up} && cargo build -q",
            "promptOnClose": false,
            // "args": ["--manifest-path=${workspaceFolder}/${relativeFileDirname}/../Cargo.toml"],
            // "cwd":"${workspaceFolder}",
            // "group": {
            //   "kind": "build",
            //   "isDefault": false
            // },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                // "reveal": "always",
                // "clear": false,
                "showReuseMessage": false,
                "close": true,
            },
            "problemMatcher": []
        },
        {
            "label": "Cargo_Run",
            // "label": "bash",
            "type": "shell",
            "command": "(clear;echo \"-------------------$(date)-------------------\"; \
                        (cargo run -q --manifest-path=${workspaceFolder}/${command:extension.commandvariable.file.fileDirBasename1Up}/Cargo.toml);\
                        echo \"------------------------------------------------------------------\")",
            // "command": [
            //     "{clear;echo \"-------------------$(date)-------------------\"};",
            //     "cd ${workspaceFolder}/${command:extension.commandvariable.file.fileDirBasename1Up}",
            //     "&& {cargo run -q || {echo \"--------------------------------------------------------\";exit 0};}",
            //     "&& {echo \"------------------------------------------------------------------\"}"
            // ],
            "promptOnClose": false,
            // "args": ["--manifest-path=${workspaceFolder}/${relativeFileDirname}/../Cargo.toml"],
            // "cwd":"${workspaceFolder}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                // "panel": "dedicated",
                "clear": false,
                "showReuseMessage": false,
                "close": false,
            },
            "problemMatcher": []
        },
    ]
}
